<Window x:Class="Rectangles.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="350" Width="525" Closing="Window_Closing_1">
	<DockPanel >
		<Button DockPanel.Dock="Bottom" Click="Button_Click_1" Height="20">Start</Button>
		<Grid >
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>

		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Rectangle x:Name="rectangle1" Fill="#FF0000FD" Width="200" Height="200" />
		<Rectangle x:Name="rectangle4" Fill="#FF00FF3A" Grid.Row="1" Width="200" Height="200"/>
		<Rectangle x:Name="rectangle3" Fill="#FF7400FF" Grid.Row="1" Grid.Column="1" Width="200" Height="200"/>
		<Rectangle x:Name="rectangle2" Fill="#FFFF1700" Grid.Column="1" Width="200" Height="200"/>
	</Grid>
	</DockPanel>
</Window>
